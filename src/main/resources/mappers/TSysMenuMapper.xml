<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lcyzh.nmerp.dao.TSysMenuMapper">

    <resultMap id="tSysMenuResultMap" type="com.lcyzh.nmerp.entity.TSysMenu">
        <result column="menu_id" property="menuId" jdbcType="BIGINT"/>
        <result column="parent_id" property="roleName" jdbcType="BIGINT"/>
        <result column="parent_ids" property="roleType" jdbcType="VARCHAR"/>
        <result column="name" property="roleSort" jdbcType="VARCHAR"/>
        <result column="sort" property="isSys" jdbcType="DECIMAL"/>
        <result column="href" property="userType" jdbcType="VARCHAR"/>
        <result column="href" property="status" jdbcType="VARCHAR"/>
        <result column="is_show" property="createBy" jdbcType="CHAR"/>
        <result column="permission" property="createDate" jdbcType="VARCHAR"/>
        <result column="create_by" property="remarks" jdbcType="VARCHAR"/>
        <result column="create_date" property="remarks" jdbcType="TIMESTAMP"/>
        <result column="create_date" property="remarks" jdbcType="VARCHAR"/>
    </resultMap>


    <select id="findByUserId"  parameterType="java.lang.Integer" resultMap="tSysMenuResultMap">
        select * from t_sys_menu where menu_id in
        (select DISTINCT rm.menu_id from t_sys_user_role ur, t_sys_role_menu rm where ur.user_id = #{userId}
         and ur.role_id = rm.role_id)
         ORDER BY sort
    </select>

</mapper>